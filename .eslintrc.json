{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "reportUnusedDisableDirectives": true,
    "rules": {
        "eqeqeq": [
            "error",
            "smart"
        ],
        "func-style": [
            "error",
            "declaration",
            { "allowArrowFunctions": true }
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "no-use-before-define": [
            "error",
            { "functions": false }
        ],
        "semi": [
            "error",
            "always"
        ],
    

        "arrow-parens": "warn",
        "array-element-newline": [
            "warn",
            "consistent"
        ],
        "array-bracket-spacing": [
            "warn",
            "never"
        ],
        "array-bracket-newline": [
            "warn",
            { "multiline": true }
        ],
        "brace-style": [
            "warn",
            "1tbs",
            { "allowSingleLine": true }
        ],
        "capitalized-comments": [
            "warn",
            "always",
            {
                "ignoreInlineComments": true,
                "ignorePattern": "cspell"
            }
        ],
        "camelcase": [
            "warn",
            {
                "ignoreDestructuring": true
            }
        ],
        "comma-dangle": [
            "warn",
            "only-multiline"
        ],
        "comma-spacing": "warn",
        "curly": [
            "warn",
            "multi-line",
            "consistent"
        ],
        "dot-location": [
            "warn",
            "property"
        ],
        "eol-last": "warn",
        "indent": [
            "warn",
            "tab",
            { "SwitchCase": 1 }
        ],
        "key-spacing": "warn",
        "keyword-spacing": "warn",
        "lines-around-comment": [
            "warn",
            {
                "beforeBlockComment": true,
                "beforeLineComment": false,
                "allowBlockStart": true,
                "allowClassStart": true,
                "allowObjectStart": true,
                "allowArrayStart": true
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "comments": 80,
                "tabWidth": 4,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true,
                "ignoreTrailingComments": true
            }
        ],
        "multiline-comment-style": "warn",
        "multiline-ternary": [
            "warn",
            "always-multiline"
        ],
        "new-cap": "warn",
        "newline-per-chained-call": [
            "warn",
            { "ignoreChainWithDepth": 3 }
        ],
        "no-multi-spaces": "warn",
        "no-mixed-spaces-and-tabs": [
            "warn",
            "smart-tabs"
        ],
        "no-tabs": [
            "warn",
            { "allowIndentationTabs": true }
        ],
        "no-trailing-spaces": [
            "warn",
            { "ignoreComments": true }
        ],
        "no-warning-comments": [
            "warn",
            {
                "terms": [ "todo", "fixme", "temp" ]
            }
        ],
        "no-useless-concat": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "object-shorthand"  : [
            "warn",
            "consistent-as-needed"
        ],
        "one-var": [
            "warn",
            {
                "initialized": "never",
                "uninitialized": "consecutive"
            }
        ],
        "operator-linebreak": [
            "warn",
            "before"
        ],
        "prefer-const": "warn",
        "quote-props": [
            "warn",
            "consistent-as-needed",
            { "keywords": true }
        ],
        "quotes": [
            "warn",
            "double",
            { "avoidEscape": true }
        ],
        "semi-spacing": "warn",
        "sort-vars": "warn",
        "spaced-comment": [
            "warn",
            "always",
            { "block": { "balanced": true } }
        ],
        "space-infix-ops": "warn",
        "space-in-parens": "warn",
        "space-before-function-paren": [
            "warn",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        
        "@typescript-eslint/no-inferrable-types": "off"
    }
}
